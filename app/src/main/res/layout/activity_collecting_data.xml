<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/start_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="0.09"
        android:text="Stop Data Collection"
        android:onClick="stopDataCollection"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/standing"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Standing"
            />

        <Button
            android:id="@+id/walking"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Walking" />

        <Button
            android:id="@+id/sitting"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_selected"
            android:text="Sitting" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/lighting"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_selected"
            android:text="Lighting Cig" />

        <Button
            android:id="@+id/holding"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Holding Cig in Place" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/drawing_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Drawing Cig Up" />

        <Button
            android:id="@+id/drawing_down"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Drawing Cig Down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/putting_out"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_weight="0.96"
            android:background="@drawable/button_bg_unselected"
            android:text="Putting Cig Out" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/holding_arm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Holding Arm in Place"
            />

        <Button
            android:id="@+id/drawing_arm_up"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Drawing Arm Up" />

        <Button
            android:id="@+id/drawing_arm_down"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:text="Drawing Arm Down" />
    </LinearLayout>

    <TextView
        android:id="@+id/pebble_equipped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Cigarette is currently in Pebble-equipped hand?"
        android:textColor="#333333"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_unselected"
            android:onClick="onNoClicked"
            android:text="No" />

        <Button
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_selected"
            android:onClick="onYesClicked"
            android:text="Yes" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

    </LinearLayout>
</LinearLayout>
